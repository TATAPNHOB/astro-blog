---
const { name } = Astro.props;

// const pages = await Astro.glob('../pages/*.astro');

const nav = [
    {
        "name": "HOME",
        "url": "/"
    },
    {
        "name": "ABOUT",
        "url": "/about"
    },
    {
        "name": "BLOG",
        "url": "/blog"
    },
    {
        "name": "PROJECTS",
        "url": "/projects"
    },
]

---

<div class="nav-links">
    {nav.map((page) => (
        <a href={page.url} class={name != undefined && name.toLowerCase() == page.name.toLowerCase() ? "highlighted" : ""}>{page.name}</a>
    ))}
</div>