---
import BlogItem from '../components/BlogItem.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = 'My Blog';
const pageName = 'blog';
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<BaseLayout pageTitle={pageTitle} pageName={pageName}>
        <ul>
            {allPosts.map((post) => (
				<BlogItem url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate}/>
			))}
        </ul>
</BaseLayout>
